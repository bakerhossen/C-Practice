#include<stdio.h>
int main(){

    int n, sum;
    scanf("%d",&n);

    if(n < 0){
        n = n * (-1);
        sum = (n * (n + 1)) / 2;
        printf("%d", -(sum - 1));
    }    
    else if(n == 0){
        printf("1");
    }
    else{
        sum = (n * (n + 1)) / 2;
        printf("%d",sum);
    }
    return 0;
}
